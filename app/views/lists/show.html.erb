<%= render "layouts/list-banner" %>
<div class="container my-5">
  <div class = "text-right">
    <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-success mb-3 text-white" %>
  </div>
  <% if @list.bookmarks.empty? %>
    <div class="banner banner-empty w-50 mx-auto rounded" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTZ8fGVtcHR5fGVufDB8MHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60); height:200px">
      <div class="container text-center">
        <p>Oops..Your movie list is empty. Add movies</p>
      </div>
    </div>
  <% end %>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <%= render "layouts/card", bookmark: bookmark%>
    <% end %>
  </div>
</div>
